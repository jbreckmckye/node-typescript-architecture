{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2018",
    "esModuleInterop": true,

    "noImplicitAny": true,
    "strictNullChecks": true,

    "baseUrl": "src",
    "paths": {
      "@adapters":   ["adapters"],
      "@adapters/*": ["adapters/*"],
      "@bindings":   ["bindings"],
      "@bindings/*": ["bindings/*"],
      "@lib":        ["lib"],
      "@lib/*":      ["lib/*"],
      "@test":       ["../test"],
      "@test/*":     ["../test/*"]
    }
  },
  "exclude": [
    "node_modules"
  ]
}
